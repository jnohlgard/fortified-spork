[Unit]
Description=/etc writable overlay
RequiresMountsFor=/sysroot/usr/share/factory/etc
RequiresMountsFor=/sysroot/.overlay-etc/

[Mount]
What=overlay
Type=overlay
# NB: Mounting read-only by default, but it is overridable by root using mount -o remount,rw /etc
Options=lowerdir=/sysroot/usr/share/factory/etc,upperdir=/sysroot/.overlay-etc/overlay,workdir=/sysroot/.overlay-etc/workdir,nodev,nosuid,noexec,ro

