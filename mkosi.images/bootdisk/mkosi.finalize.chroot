#!/usr/bin/sh
set -eu

printf 'Selecting system images to include on the install disk\n'
mkdir -p "/images/spork_${IMAGE_VERSION}"
for f in "/mkosi.output/spork_${IMAGE_VERSION}."*.raw; do
  t="$(printf '%s' "${f##*/}" | sed -e "s|${IMAGE_VERSION}\.|${IMAGE_VERSION}/|")"
  cp -v --reflink=auto --sparse=auto --archive \
    "${f}" "/images/${t}"
done
